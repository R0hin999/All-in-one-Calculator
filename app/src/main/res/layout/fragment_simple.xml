<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Scientific">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="0"
        android:textSize="13pt"
        android:gravity="bottom"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:background="@color/black"
        android:id="@+id/tvsm"
        />
    <TextView
        android:maxLength="15"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:textSize="22pt"
        android:gravity="bottom"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:background="@color/black"
        android:id="@+id/tvlg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/bac"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AC"
                android:backgroundTint="@color/black"
                android:textSize="25dp"
                android:textColor="@color/white"

                ></Button>
            <Button
                android:id="@+id/bc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C "
                android:backgroundTint="@color/black"
                android:textSize="25dp"
                android:textColor="@color/white"
                ></Button>
            <Button
                android:id="@+id/bb1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="("
                android:backgroundTint="@color/black"
                android:textSize="25dp"
                android:textColor="@color/white"
                ></Button>
            <Button
                android:id="@+id/bb2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=")"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:textSize="25dp"

                ></Button>
            <Button
                android:id="@+id/bdiv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="รท"
                android:textSize="30dp"
                android:backgroundTint="#f72585"

                ></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1B1E1E"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:backgroundTint="#4cc9f0"
                android:textSize="25dp"
                android:id="@+id/b7"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:id="@+id/b8"
                android:backgroundTint="#4cc9f0"
                android:textSize="25dp"

                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:id="@+id/b9"
                android:backgroundTint="#4cc9f0"
                android:textSize="25dp"

                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="X"
                android:id="@+id/bmul"
                android:textSize="22dp"
                android:paddingRight="4dp"

                android:backgroundTint="#f72585"
                ></Button>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2C2810"
            android:layout_weight="1"

            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#4cc9f0"
                android:text="4"
                android:id="@+id/b4"
                android:textSize="25dp"

                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#4cc9f0"
                android:text="5"
                android:id="@+id/b5"
                android:textSize="25dp"

                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:id="@+id/b6"
                android:backgroundTint="#4cc9f0"
                android:textSize="25dp"

                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:paddingRight="4dp"
                android:textSize="35dp"
                android:id="@+id/bsub"
                android:backgroundTint="#f72585"
                ></Button>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1D102C"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:id="@+id/b1"
                android:backgroundTint="#4cc9f0"
                android:textSize="25dp"

                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:id="@+id/b2"
                android:backgroundTint="#4cc9f0"
                android:textSize="25dp"

                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/b3"
                android:text="3"
                android:backgroundTint="#4cc9f0"
                android:textSize="25dp"

                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:id="@+id/badd"
                android:paddingRight="4dp"
                android:textSize="30dp"
                android:backgroundTint="#f72585"
                ></Button>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button

                android:backgroundTint="#4cc9f0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:id="@+id/b0"

                android:textSize="25dp"

                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="."
                android:backgroundTint="#4cc9f0"
                android:textSize="35dp"
                android:id="@+id/bdot"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="="
                android:backgroundTint="#f72585"
                android:textSize="35dp"
                android:id="@+id/bequal"
                android:paddingRight="4dp"



                ></Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>